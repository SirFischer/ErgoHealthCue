<Window x:Class="ErgoHealthCue.Windows.UsernamePromptWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Welcome to ErgoHealthCue"
        Height="350" Width="500"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="#F9FAFB"
        WindowStyle="SingleBorderWindow">
    
    <Window.Resources>
        <Style x:Key="ModernTextBox" TargetType="TextBox">
            <Setter Property="Padding" Value="12,10"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="BorderBrush" Value="#D1D5DB"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="Foreground" Value="#1F2937"/>
        </Style>
    </Window.Resources>
    
    <Grid Margin="30">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="0,0,0,20">
            <TextBlock Text="ðŸ† Welcome to ErgoHealthCue!" 
                      FontSize="24" 
                      FontWeight="Bold" 
                      Foreground="#1F2937"
                      HorizontalAlignment="Center"
                      Margin="0,0,0,10"/>
            <TextBlock Text="Join the global leaderboard and compete with users worldwide!" 
                      FontSize="14" 
                      Foreground="#6B7280"
                      HorizontalAlignment="Center"
                      TextWrapping="Wrap"
                      TextAlignment="Center"/>
        </StackPanel>
        
        <!-- Username Input -->
        <StackPanel Grid.Row="1" Margin="0,0,0,20">
            <TextBlock Text="Choose your username:" 
                      FontSize="14" 
                      FontWeight="SemiBold"
                      Foreground="#374151" 
                      Margin="0,0,0,8"/>
            <TextBox x:Name="UsernameTextBox" 
                    Style="{StaticResource ModernTextBox}"
                    MaxLength="20"
                    Text=""
                    ToolTip="This name will be visible to other users on the leaderboard"/>
            <TextBlock x:Name="HintText"
                      Text="Leave empty to auto-generate a username" 
                      FontSize="11" 
                      Foreground="#9CA3AF" 
                      FontStyle="Italic"
                      Margin="0,5,0,0"/>
        </StackPanel>
        
        <!-- Leaderboard Info -->
        <Border Grid.Row="2" 
                Background="#EEF2FF" 
                BorderBrush="#C7D2FE" 
                BorderThickness="1" 
                CornerRadius="8" 
                Padding="15"
                Margin="0,0,0,15">
            <StackPanel>
                <TextBlock Text="What will be shared:" 
                          FontSize="13" 
                          FontWeight="SemiBold"
                          Foreground="#4338CA"
                          Margin="0,0,0,8"/>
                <TextBlock Text="â€¢ Your username and level" 
                          FontSize="12" 
                          Foreground="#4338CA"
                          Margin="0,2,0,2"/>
                <TextBlock Text="â€¢ Total XP earned" 
                          FontSize="12" 
                          Foreground="#4338CA"
                          Margin="0,2,0,2"/>
                <TextBlock Text="â€¢ Number of completed and dismissed cues" 
                          FontSize="12" 
                          Foreground="#4338CA"
                          Margin="0,2,0,2"/>
            </StackPanel>
        </Border>
        
        <!-- Opt-out Option -->
        <CheckBox Grid.Row="3"
                 x:Name="OptOutCheckBox" 
                 Content="I don't want to participate in the leaderboard (you can change this later in Settings)"
                 FontSize="12"
                 Foreground="#6B7280"
                 Margin="0,0,0,20"/>
        
        <!-- Buttons -->
        <StackPanel Grid.Row="5" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button x:Name="ContinueButton"
                   Content="Continue"
                   Width="120"
                   Height="44"
                   FontSize="15"
                   Margin="10,0,0,0"
                   Click="ContinueButton_Click"
                   IsDefault="True">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Background">
                            <Setter.Value>
                                <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                    <GradientStop Color="#6366F1" Offset="0"/>
                                    <GradientStop Color="#4F46E5" Offset="1"/>
                                </LinearGradientBrush>
                            </Setter.Value>
                        </Setter>
                        <Setter Property="Foreground" Value="White"/>
                        <Setter Property="BorderThickness" Value="0"/>
                        <Setter Property="Cursor" Value="Hand"/>
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}" 
                                           CornerRadius="10"
                                           Padding="20,10">
                                        <ContentPresenter HorizontalAlignment="Center" 
                                                        VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background">
                                    <Setter.Value>
                                        <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                            <GradientStop Color="#4F46E5" Offset="0"/>
                                            <GradientStop Color="#4338CA" Offset="1"/>
                                        </LinearGradientBrush>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>
        </StackPanel>
    </Grid>
</Window>
