<Window x:Class="ErgoHealthCue.Windows.WelcomeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Welcome!" 
        Height="320" Width="450"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        Topmost="True"
        WindowStartupLocation="CenterScreen"
        ShowInTaskbar="False"
        ResizeMode="NoResize">
    
    <Border x:Name="ContentBorder"
            BorderBrush="#3B82F6" 
            BorderThickness="3" 
            CornerRadius="20"
            Background="White"
            Padding="40">
        <Border.Effect>
            <DropShadowEffect BlurRadius="30" ShadowDepth="0" Opacity="0.4" Color="#3B82F6"/>
        </Border.Effect>
        
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <!-- Welcome Icon -->
            <TextBlock Text="ðŸ‘‹" 
                      FontSize="60"
                      HorizontalAlignment="Center"
                      Margin="0,0,0,20"/>
            
            <!-- Welcome Text -->
            <TextBlock Text="Welcome to ErgoHealthCue!"
                      FontSize="28"
                      FontWeight="Bold"
                      Foreground="#3B82F6"
                      HorizontalAlignment="Center"
                      Margin="0,0,0,15"/>
            
            <!-- Description -->
            <TextBlock Text="Your ergonomic health companion"
                      FontSize="16"
                      Foreground="#6B7280"
                      HorizontalAlignment="Center"
                      Margin="0,0,0,10"/>
            
            <TextBlock Text="running silently in your system tray"
                      FontSize="14"
                      Foreground="#9CA3AF"
                      HorizontalAlignment="Center"
                      Margin="0,0,0,25"/>
            
            <!-- Info Text -->
            <Border Background="#EFF6FF" 
                    CornerRadius="10"
                    Padding="15,10"
                    Margin="0,0,0,20">
                <TextBlock TextWrapping="Wrap"
                          TextAlignment="Center"
                          Foreground="#1E40AF"
                          FontSize="13">
                    <Run Text="ðŸ’¡ Look for the "/>
                    <Run Text="E" FontWeight="Bold"/>
                    <Run Text=" icon in your system tray to access settings"/>
                </TextBlock>
            </Border>
            
            <!-- Close Button -->
            <Button Content="Get Started"
                   Width="160"
                   Height="44"
                   FontSize="16"
                   FontWeight="Medium"
                   Click="CloseButton_Click">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Background" Value="#3B82F6"/>
                        <Setter Property="Foreground" Value="White"/>
                        <Setter Property="BorderThickness" Value="0"/>
                        <Setter Property="Cursor" Value="Hand"/>
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}" 
                                           CornerRadius="10"
                                           Padding="20,10">
                                        <Border.Effect>
                                            <DropShadowEffect BlurRadius="8" ShadowDepth="2" Opacity="0.3"/>
                                        </Border.Effect>
                                        <ContentPresenter HorizontalAlignment="Center" 
                                                        VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#2563EB"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>
        </StackPanel>
    </Border>
</Window>
