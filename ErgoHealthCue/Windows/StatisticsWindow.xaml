<Window x:Class="ErgoHealthCue.Windows.StatisticsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:ErgoHealthCue.Windows"
        Title="Statistics" 
        Height="500" Width="800"
        WindowStartupLocation="CenterOwner">
    
    <Window.Resources>
        <local:StatusConverter x:Key="StatusConverter"/>
    </Window.Resources>
    
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Summary -->
        <GroupBox Grid.Row="0" Header="Summary" Padding="10" Margin="0,0,0,10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                
                <StackPanel Grid.Column="0">
                    <TextBlock Text="Total Cues" FontWeight="Bold" HorizontalAlignment="Center"/>
                    <TextBlock x:Name="TotalCuesText" 
                              Text="0" 
                              FontSize="24" 
                              HorizontalAlignment="Center" 
                              Margin="0,5,0,0"/>
                </StackPanel>
                
                <StackPanel Grid.Column="1">
                    <TextBlock Text="Completed" FontWeight="Bold" HorizontalAlignment="Center"/>
                    <TextBlock x:Name="CompletedText" 
                              Text="0" 
                              FontSize="24" 
                              Foreground="Green"
                              HorizontalAlignment="Center" 
                              Margin="0,5,0,0"/>
                </StackPanel>
                
                <StackPanel Grid.Column="2">
                    <TextBlock Text="Dismissed" FontWeight="Bold" HorizontalAlignment="Center"/>
                    <TextBlock x:Name="DismissedText" 
                              Text="0" 
                              FontSize="24" 
                              Foreground="Red"
                              HorizontalAlignment="Center" 
                              Margin="0,5,0,0"/>
                </StackPanel>
            </Grid>
        </GroupBox>
        
        <!-- Detailed List -->
        <GroupBox Grid.Row="1" Header="History" Padding="10">
            <DataGrid x:Name="StatisticsDataGrid"
                     AutoGenerateColumns="False"
                     IsReadOnly="True"
                     SelectionMode="Single"
                     GridLinesVisibility="Horizontal"
                     HeadersVisibility="Column">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Date/Time" Binding="{Binding ShownAt, StringFormat='yyyy-MM-dd HH:mm'}" Width="140"/>
                    <DataGridTextColumn Header="Type" Binding="{Binding CueType}" Width="120"/>
                    <DataGridTextColumn Header="Title" Binding="{Binding CueTitle}" Width="150"/>
                    <DataGridTextColumn Header="Status" Binding="{Binding WasCompleted, Converter={StaticResource StatusConverter}}" Width="100"/>
                    <DataGridTextColumn Header="Response Time" Binding="{Binding ResponseTime}" Width="*"/>
                </DataGrid.Columns>
            </DataGrid>
        </GroupBox>
        
        <!-- Close Button -->
        <Button Grid.Row="2" 
               Content="Close"
               Width="100"
               Height="35"
               Margin="0,10,0,0"
               HorizontalAlignment="Right"
               Click="CloseButton_Click"/>
    </Grid>
</Window>
