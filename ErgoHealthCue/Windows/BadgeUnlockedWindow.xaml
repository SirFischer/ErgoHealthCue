<Window x:Class="ErgoHealthCue.Windows.BadgeUnlockedWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Badge Unlocked!" 
        Height="250" Width="400"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        Topmost="True"
        ShowInTaskbar="False"
        WindowStartupLocation="CenterScreen">
    <Border x:Name="ContentBorder" Background="White" CornerRadius="20" 
            BorderBrush="#F59E0B" BorderThickness="3"
            Padding="30">
        <Border.Effect>
            <DropShadowEffect Color="Black" Opacity="0.3" BlurRadius="20" ShadowDepth="0"/>
        </Border.Effect>
        
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock x:Name="BadgeIcon" Text="ðŸ†" FontSize="60" HorizontalAlignment="Center" Margin="0,0,0,10"/>
            <TextBlock x:Name="TitleText" Text="Badge Unlocked!" FontSize="24" FontWeight="Bold" 
                       Foreground="#F59E0B" HorizontalAlignment="Center" Margin="0,0,0,10"/>
            <TextBlock x:Name="BadgeNameText" FontSize="20" FontWeight="SemiBold"
                       Foreground="#1F2937" HorizontalAlignment="Center" Margin="0,0,0,5"/>
            <TextBlock x:Name="BadgeDescriptionText" FontSize="14" 
                       Foreground="#6B7280" HorizontalAlignment="Center" TextWrapping="Wrap" TextAlignment="Center"/>
        </StackPanel>
    </Border>
</Window>
