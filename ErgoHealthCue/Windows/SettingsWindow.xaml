<Window x:Class="ErgoHealthCue.Windows.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ErgoHealthCue Settings" 
        Height="750" Width="950"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanMinimize"
        Background="#F9FAFB">
    
    <Window.Resources>
        <Style x:Key="ModernGroupBox" TargetType="GroupBox">
            <Setter Property="BorderBrush" Value="#E5E7EB"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="20"/>
            <Setter Property="Margin" Value="0,0,0,20"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="GroupBox">
                        <Border Background="{TemplateBinding Background}"
                               BorderBrush="{TemplateBinding BorderBrush}"
                               BorderThickness="{TemplateBinding BorderThickness}"
                               CornerRadius="12"
                               Padding="{TemplateBinding Padding}">
                            <Border.Effect>
                                <DropShadowEffect BlurRadius="10" ShadowDepth="0" Opacity="0.05" Color="Black"/>
                            </Border.Effect>
                            <StackPanel>
                                <TextBlock Text="{TemplateBinding Header}"
                                         FontSize="18"
                                         FontWeight="SemiBold"
                                         Foreground="#1F2937"
                                         Margin="0,0,0,15"/>
                                <ContentPresenter/>
                            </StackPanel>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <Style x:Key="ModernTextBox" TargetType="TextBox">
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="BorderBrush" Value="#D1D5DB"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="Foreground" Value="#1F2937"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}"
                               BorderBrush="{TemplateBinding BorderBrush}"
                               BorderThickness="{TemplateBinding BorderThickness}"
                               CornerRadius="8">
                            <ScrollViewer x:Name="PART_ContentHost"
                                        Margin="{TemplateBinding Padding}"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="BorderBrush" Value="#9CA3AF"/>
                </Trigger>
                <Trigger Property="IsFocused" Value="True">
                    <Setter Property="BorderBrush" Value="#6366F1"/>
                    <Setter Property="BorderThickness" Value="2"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>
    
    <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
        <Grid Margin="30">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="0,0,0,30">
            <TextBlock Text="Settings" FontSize="32" FontWeight="Bold" Foreground="#111827"/>
            <TextBlock Text="Configure your ergonomic reminder preferences" 
                      FontSize="14" Foreground="#6B7280" Margin="0,5,0,0"/>
        </StackPanel>
        
        <!-- Exercise Intervals -->
        <GroupBox Grid.Row="1" Header="Exercise Intervals" Style="{StaticResource ModernGroupBox}">
            <StackPanel>
                <CheckBox x:Name="RandomExerciseIntervalsCheckBox" 
                         Content="Use Random Exercise Intervals"
                         FontSize="14"
                         Foreground="#374151"
                         Margin="0,0,0,15"/>
                
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="20"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    
                    <StackPanel Grid.Column="0">
                        <TextBlock Text="Minimum Interval (minutes)" 
                                  FontSize="13" 
                                  Foreground="#6B7280" 
                                  Margin="0,0,0,5"/>
                        <TextBox x:Name="MinExerciseIntervalTextBox" 
                                Style="{StaticResource ModernTextBox}"/>
                    </StackPanel>
                    
                    <StackPanel Grid.Column="2">
                        <TextBlock Text="Maximum Interval (minutes)" 
                                  FontSize="13" 
                                  Foreground="#6B7280" 
                                  Margin="0,0,0,5"/>
                        <TextBox x:Name="MaxExerciseIntervalTextBox" 
                                Style="{StaticResource ModernTextBox}"/>
                    </StackPanel>
                </Grid>
            </StackPanel>
        </GroupBox>
        
        <!-- Position Change Intervals -->
        <GroupBox Grid.Row="2" Header="Position Change Intervals" Style="{StaticResource ModernGroupBox}">
            <StackPanel>
                <CheckBox x:Name="RandomPositionIntervalsCheckBox" 
                         Content="Use Random Position Change Intervals"
                         FontSize="14"
                         Foreground="#374151"
                         Margin="0,0,0,15"/>
                
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="20"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    
                    <StackPanel Grid.Column="0">
                        <TextBlock Text="Minimum Interval (minutes)" 
                                  FontSize="13" 
                                  Foreground="#6B7280" 
                                  Margin="0,0,0,5"/>
                        <TextBox x:Name="MinPositionIntervalTextBox" 
                                Style="{StaticResource ModernTextBox}"/>
                    </StackPanel>
                    
                    <StackPanel Grid.Column="2">
                        <TextBlock Text="Maximum Interval (minutes)" 
                                  FontSize="13" 
                                  Foreground="#6B7280" 
                                  Margin="0,0,0,5"/>
                        <TextBox x:Name="MaxPositionIntervalTextBox" 
                                Style="{StaticResource ModernTextBox}"/>
                    </StackPanel>
                </Grid>
                
                <CheckBox x:Name="StartupCheckBox" 
                         Content="Start with Windows"
                         FontSize="14"
                         Foreground="#374151"
                         Margin="0,15,0,0"/>
            </StackPanel>
        </GroupBox>
        
        <!-- Language Selection -->
        <GroupBox Grid.Row="3" Header="Language / Språk / Langue" Style="{StaticResource ModernGroupBox}">
            <StackPanel>
                <TextBlock Text="Select your preferred language:" 
                          FontSize="13" 
                          Foreground="#6B7280" 
                          Margin="0,0,0,10"/>
                <ComboBox x:Name="LanguageComboBox" 
                         Width="200"
                         Height="38"
                         FontSize="14"
                         HorizontalAlignment="Left"
                         SelectedIndex="0">
                    <ComboBoxItem Content="Auto (System Language)" Tag="auto"/>
                    <ComboBoxItem Content="Norsk (Norwegian)" Tag="no"/>
                    <ComboBoxItem Content="English" Tag="en"/>
                    <ComboBoxItem Content="Français (French)" Tag="fr"/>
                </ComboBox>
                <TextBlock Text="Note: Restart application for language change to take effect" 
                          FontSize="12" 
                          Foreground="#9CA3AF" 
                          FontStyle="Italic"
                          Margin="0,10,0,0"/>
            </StackPanel>
        </GroupBox>
        
        <!-- Current Position -->
        <GroupBox Grid.Row="4" Header="Manage Cues by Position" Style="{StaticResource ModernGroupBox}">
            <StackPanel>
                <TextBlock Text="Select position to view and manage its specific cues:" 
                          FontSize="13" 
                          Foreground="#6B7280" 
                          Margin="0,0,0,10"/>
                <StackPanel Orientation="Horizontal">
                    <RadioButton x:Name="StandingRadio" 
                                Content="Standing" 
                                GroupName="Position"
                                FontSize="14"
                                Margin="0,0,20,0"
                                Checked="PositionRadio_Checked"/>
                    <RadioButton x:Name="SittingRadio" 
                                Content="Sitting" 
                                GroupName="Position"
                                FontSize="14"
                                IsChecked="True"
                                Margin="0,0,20,0"
                                Checked="PositionRadio_Checked"/>
                    <RadioButton x:Name="FloorRadio" 
                                Content="Floor" 
                                GroupName="Position"
                                FontSize="14"
                                Margin="0,0,20,0"
                                Checked="PositionRadio_Checked"/>
                    <RadioButton x:Name="PositionChangesRadio" 
                                Content="Position Changes" 
                                GroupName="Position"
                                FontSize="14"
                                Checked="PositionRadio_Checked"/>
                </StackPanel>
            </StackPanel>
        </GroupBox>
        
        <!-- Cues Management -->
        <GroupBox Grid.Row="5" Header="Cues" Style="{StaticResource ModernGroupBox}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                
                <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
                    <Button x:Name="AddCueButton" 
                           Content="+ Add New Cue" 
                           Width="140" 
                           Height="38"
                           FontSize="14"
                           Margin="0,0,10,0"
                           Click="AddCueButton_Click">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Background" Value="#6366F1"/>
                                <Setter Property="Foreground" Value="White"/>
                                <Setter Property="BorderThickness" Value="0"/>
                                <Setter Property="Cursor" Value="Hand"/>
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}" 
                                                   CornerRadius="8"
                                                   Padding="15,8">
                                                <ContentPresenter HorizontalAlignment="Center" 
                                                                VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#4F46E5"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                    
                    <Button x:Name="RemoveCueButton" 
                           Content="Remove Selected" 
                           Width="140" 
                           Height="38"
                           FontSize="14"
                           Click="RemoveCueButton_Click">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Background" Value="#F3F4F6"/>
                                <Setter Property="Foreground" Value="#374151"/>
                                <Setter Property="BorderThickness" Value="0"/>
                                <Setter Property="Cursor" Value="Hand"/>
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}" 
                                                   CornerRadius="8"
                                                   Padding="15,8">
                                                <ContentPresenter HorizontalAlignment="Center" 
                                                                VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#E5E7EB"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                    
                    <Button x:Name="LoadDefaultCuesButton" 
                           Content="Load Default Cues" 
                           Width="160" 
                           Height="38"
                           FontSize="14"
                           Margin="10,0,0,0"
                           Click="LoadDefaultCuesButton_Click">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Background" Value="#10B981"/>
                                <Setter Property="Foreground" Value="White"/>
                                <Setter Property="BorderThickness" Value="0"/>
                                <Setter Property="Cursor" Value="Hand"/>
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}" 
                                                   CornerRadius="8"
                                                   Padding="15,8">
                                                <ContentPresenter HorizontalAlignment="Center" 
                                                                VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#059669"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                    
                    <TextBlock x:Name="CurrentFilterText"
                              Text="Showing: Sitting Position Cues"
                              FontSize="14"
                              Foreground="#6B7280"
                              VerticalAlignment="Center"
                              Margin="20,0,0,0"/>
                </StackPanel>
                
                <DataGrid Grid.Row="1"
                         x:Name="CuesDataGrid"
                         AutoGenerateColumns="False"
                         CanUserAddRows="False"
                         SelectionMode="Single"
                         GridLinesVisibility="None"
                         HeadersVisibility="Column"
                         BorderThickness="1"
                         BorderBrush="#E5E7EB"
                         Background="White"
                         RowBackground="White"
                         AlternatingRowBackground="#F9FAFB">
                    <DataGrid.Columns>
                        <DataGridCheckBoxColumn Header="Enabled" Binding="{Binding IsEnabled}" Width="80"/>
                        <DataGridTextColumn Header="Type" Binding="{Binding Type}" Width="140" IsReadOnly="True"/>
                        <DataGridTextColumn Header="Title" Binding="{Binding Title}" Width="200"/>
                        <DataGridTextColumn Header="Description" Binding="{Binding Description}" Width="*"/>
                    </DataGrid.Columns>
                </DataGrid>
            </Grid>
        </GroupBox>
        
        <!-- Bottom Buttons -->
        <StackPanel Grid.Row="6" 
                   Orientation="Horizontal" 
                   HorizontalAlignment="Right"
                   Margin="0,20,0,0">
            <Button x:Name="ViewStatsButton"
                   Content="View Statistics"
                   Width="150"
                   Height="44"
                   FontSize="15"
                   Margin="0,0,15,0"
                   Click="ViewStatsButton_Click">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Background" Value="White"/>
                        <Setter Property="Foreground" Value="#374151"/>
                        <Setter Property="BorderBrush" Value="#D1D5DB"/>
                        <Setter Property="BorderThickness" Value="1"/>
                        <Setter Property="Cursor" Value="Hand"/>
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}" 
                                           BorderBrush="{TemplateBinding BorderBrush}"
                                           BorderThickness="{TemplateBinding BorderThickness}"
                                           CornerRadius="10"
                                           Padding="20,10">
                                        <ContentPresenter HorizontalAlignment="Center" 
                                                        VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#F9FAFB"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>
            
            <Button x:Name="SaveButton"
                   Content="Save Changes"
                   Width="150"
                   Height="44"
                   FontSize="15"
                   FontWeight="Medium"
                   Margin="0,0,10,0"
                   Click="SaveButton_Click"
                   IsDefault="True">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Background">
                            <Setter.Value>
                                <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                    <GradientStop Color="#6366F1" Offset="0"/>
                                    <GradientStop Color="#4F46E5" Offset="1"/>
                                </LinearGradientBrush>
                            </Setter.Value>
                        </Setter>
                        <Setter Property="Foreground" Value="White"/>
                        <Setter Property="BorderThickness" Value="0"/>
                        <Setter Property="Cursor" Value="Hand"/>
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}" 
                                           CornerRadius="10"
                                           Padding="20,10">
                                        <Border.Effect>
                                            <DropShadowEffect BlurRadius="8" ShadowDepth="2" Opacity="0.2" Color="#6366F1"/>
                                        </Border.Effect>
                                        <ContentPresenter HorizontalAlignment="Center" 
                                                        VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background">
                                    <Setter.Value>
                                        <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                            <GradientStop Color="#4F46E5" Offset="0"/>
                                            <GradientStop Color="#4338CA" Offset="1"/>
                                        </LinearGradientBrush>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>
            
            <Button x:Name="CancelButton"
                   Content="Cancel"
                   Width="100"
                   Height="44"
                   FontSize="15"
                   Click="CancelButton_Click"
                   IsCancel="True">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Background" Value="Transparent"/>
                        <Setter Property="Foreground" Value="#6B7280"/>
                        <Setter Property="BorderThickness" Value="0"/>
                        <Setter Property="Cursor" Value="Hand"/>
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}" 
                                           CornerRadius="10"
                                           Padding="20,10">
                                        <ContentPresenter HorizontalAlignment="Center" 
                                                        VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#F3F4F6"/>
                                <Setter Property="Foreground" Value="#374151"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>
        </StackPanel>
    </Grid>
    </ScrollViewer>
</Window>
