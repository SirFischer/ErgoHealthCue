<Window x:Class="ErgoHealthCue.Windows.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ErgoHealthCue Settings" 
        Height="600" Width="800"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanMinimize">
    
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- General Settings -->
        <GroupBox Grid.Row="0" Header="General Settings" Margin="0,0,0,10" Padding="10">
            <StackPanel>
                <CheckBox x:Name="RandomIntervalsCheckBox" 
                         Content="Use Random Intervals"
                         Margin="0,5"/>
                
                <StackPanel Orientation="Horizontal" Margin="0,10,0,5">
                    <TextBlock Text="Minimum Interval (minutes):" VerticalAlignment="Center" Width="180"/>
                    <TextBox x:Name="MinIntervalTextBox" Width="100" Height="25" VerticalContentAlignment="Center"/>
                </StackPanel>
                
                <StackPanel Orientation="Horizontal" Margin="0,5">
                    <TextBlock Text="Maximum Interval (minutes):" VerticalAlignment="Center" Width="180"/>
                    <TextBox x:Name="MaxIntervalTextBox" Width="100" Height="25" VerticalContentAlignment="Center"/>
                </StackPanel>
                
                <CheckBox x:Name="StartupCheckBox" 
                         Content="Start with Windows"
                         Margin="0,10,5,5"/>
            </StackPanel>
        </GroupBox>
        
        <!-- Cues Management -->
        <GroupBox Grid.Row="1" Header="Quick Actions" Margin="0,0,0,10" Padding="10">
            <StackPanel Orientation="Horizontal">
                <Button x:Name="AddCueButton" 
                       Content="Add New Cue" 
                       Width="120" 
                       Height="30" 
                       Margin="0,0,10,0"
                       Click="AddCueButton_Click"/>
                <Button x:Name="RemoveCueButton" 
                       Content="Remove Selected" 
                       Width="120" 
                       Height="30" 
                       Margin="0,0,10,0"
                       Click="RemoveCueButton_Click"/>
            </StackPanel>
        </GroupBox>
        
        <!-- Cues List -->
        <GroupBox Grid.Row="2" Header="Cues" Padding="10">
            <DataGrid x:Name="CuesDataGrid"
                     AutoGenerateColumns="False"
                     CanUserAddRows="False"
                     SelectionMode="Single"
                     GridLinesVisibility="Horizontal"
                     HeadersVisibility="Column">
                <DataGrid.Columns>
                    <DataGridCheckBoxColumn Header="Enabled" Binding="{Binding IsEnabled}" Width="60"/>
                    <DataGridTextColumn Header="Type" Binding="{Binding Type}" Width="120" IsReadOnly="True"/>
                    <DataGridTextColumn Header="Title" Binding="{Binding Title}" Width="150"/>
                    <DataGridTextColumn Header="Description" Binding="{Binding Description}" Width="*"/>
                </DataGrid.Columns>
            </DataGrid>
        </GroupBox>
        
        <!-- Bottom Buttons -->
        <StackPanel Grid.Row="3" 
                   Orientation="Horizontal" 
                   HorizontalAlignment="Right"
                   Margin="0,10,0,0">
            <Button x:Name="ViewStatsButton"
                   Content="View Statistics"
                   Width="120"
                   Height="35"
                   Margin="0,0,10,0"
                   Click="ViewStatsButton_Click"/>
            <Button x:Name="SaveButton"
                   Content="Save"
                   Width="100"
                   Height="35"
                   Margin="0,0,10,0"
                   Click="SaveButton_Click"
                   IsDefault="True">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Background" Value="#4CAF50"/>
                        <Setter Property="Foreground" Value="White"/>
                        <Setter Property="FontWeight" Value="Bold"/>
                    </Style>
                </Button.Style>
            </Button>
            <Button x:Name="CancelButton"
                   Content="Cancel"
                   Width="100"
                   Height="35"
                   Click="CancelButton_Click"
                   IsCancel="True"/>
        </StackPanel>
    </Grid>
</Window>
